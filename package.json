{
  "name": "@balena/jellyfish-chat-widget",
  "version": "3.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-chat-widget.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Chat widget library for Jellyfish",
  "main": "lib/index.jsx",
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{js,jsx}"
    ],
    "modules": [
      "lib"
    ]
  },
  "ava": {
    "timeout": "2m",
    "verbose": true,
    "serial": true,
    "failWithoutAssertions": true,
    "extensions": [
      "jsx"
    ],
    "babel": {
      "testOptions": {
        "plugins": [
          "@babel/plugin-syntax-jsx"
        ]
      }
    },
    "files": [
      "lib/**/*.spec.{js,jsx}"
    ],
    "require": [
      "./test/browser-setup",
      "./test/register",
      "./test/max-listeners"
    ]
  },
  "scripts": {
    "test": "npm run doc && catch-uncommitted --skip-node-versionbot-changes && make lint && make test",
    "doc": "jsdoc2md --template doc/README.hbs lib/*.jsx lib/**/*.jsx lib/**/*.js > README.md"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-ui-components": "^6.0.0",
    "catch-uncommitted": "^1.6.2",
    "immutability-helper": "^3.1.1",
    "jsdoc-to-markdown": "^6.0.1",
    "lodash": "^4.17.20",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-icons": "^3.11.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "rendition": "^18.16.0",
    "styled-components": "^5.2.1",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/register": "^7.12.1",
    "@balena/jellycheck": "^0.0.8",
    "ava": "^3.13.0",
    "bluebird": "^3.7.2",
    "browser-env": "^3.3.0",
    "depcheck": "^1.3.1",
    "deplint": "^1.1.2",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "node-hook": "^1.0.0",
    "sinon": "^9.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "npm run doc"
    ]
  }
}
