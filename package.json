{
  "name": "@balena/jellyfish-chat-widget",
  "version": "8.0.69",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-chat-widget.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Chat widget library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint-fix",
      "git add ."
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc && copyup lib/assets/**/* build",
    "lint": "balena-lint --typescript lib && npm run check && deplint && depcheck",
    "lint-fix": "balena-lint --typescript --fix lib",
    "unit": "jest",
    "test": "catch-uncommitted --skip-node-versionbot-changes && npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-ui-components": "^9.1.79",
    "immutability-helper": "^3.1.1",
    "lodash": "^4.17.21",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "rendition": "^20.14.0",
    "styled-components": "^5.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/lint": "^5.4.2",
    "@types/bluebird": "^3.5.35",
    "@types/jest": "^26.0.23",
    "@types/sinon": "^10.0.0",
    "bluebird": "^3.7.2",
    "catch-uncommitted": "^2.0.0",
    "copyfiles": "^2.4.1",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "eslint": "^7.26.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "simple-git-hooks": "^2.4.1",
    "sinon": "^10.0.0",
    "ts-jest": "^26.5.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
